{
    "sampler": {
        "type": "SamplerAdd",
        "params": {
            "max_len": 2,
            "mixed_len": false,
            "reverse_result": false,
            "scratchpad_type": "basic"
        }
    },
    "model": {
        "type": "GPT2Model",
        "params": {
            "n_embd": 128,
            "n_head": 2,
            "n_layer": 2
        }
    },
    "evaluator": {
        "type": "Evaluator",
        "params": {
            "num_samples": 100,
            "strip_scratchpad": true
        }
    },
    "trainer": {
        "type": "Trainer",
        "params": {
            "training_steps": 100000,
            "batch_size": 8,
            "eval_rate": 100,
            "initial_lr": 1e-5,
            "lr_scheduler_type": "linear"
        }
    }
}
